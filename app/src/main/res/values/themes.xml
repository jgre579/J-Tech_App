    <style name="CardStyle">

        <item name="cardElevation">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="CategoryTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_900</item>

    </style>
    <style name="CategoryImage">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/off_black</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white_50a</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white_50a</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/off_black</item>
        <item name="android:textSize">18sp</item>
    </style>









</resources>